# .env.example - template file for environment variables
# Please copy this file to ".env" and fill in your actual values

# ---------------- Kafka Config ----------------
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_LISTENER=PLAINTEXT://0.0.0.0:9092
KAFKA_TOPIC_SMOKE=smoke_stream

# ---------------- Flask API ----------------
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ---------------- Airflow ----------------
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=change_this_fernet_key
AIRFLOW__WEBSERVER__DEFAULT_USER=admin
AIRFLOW__WEBSERVER__DEFAULT_PASSWORD=change_this_password

# ---------------- ML Model ----------------
MODEL_PATH=models/smoke_model.pkl

# ---------------- Monitoring ----------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ---------------- Stream Generator ----------------
STREAM_INTERVAL=1.0
REPEAT_STREAM=true
